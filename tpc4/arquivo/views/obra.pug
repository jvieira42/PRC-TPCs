extends layout
block content
  .w3-card-4
    header.w3-container.w3-blue-grey
      h1 
        b= obra.tit
  a.w3-large.w3-blue-grey(class='w3-button' href='../') <b>Voltar</b>
  .w3-card-4.w3-margin-top
    .w3-large.w3-padding-small
        p <b>ID:</b> 
          =obra.id
        p <b>Tipo:</b> 
          =obra.type
        p <b>Compositor:</b> 
          =obra.comp
        p <b>Arranjo:</b> 
          =obra.arr    
  .w3-card-4
    h1.w3-container.w3-blue-grey Partituras
    table.w3-table-all
            tr
                th.w3-center ID
                th.w3-center Path
                th.w3-center Voz
                th.w3-center Clave
                th.w3-center Afinação
            each p in parts
                tr
                    td.w3-center= p.id
                    td.w3-center= p.path
                    td.w3-center= p.voz
                    td.w3-center= p.clave
                    td.w3-center= p.afinacao
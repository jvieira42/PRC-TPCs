extends layout
block content


      .w3-container
        h2.w3-center
          <b>Reposit√≥rios</b>
        select.w3-select.w3-border(name="repository" id='repository')
          each rep in repos
            option= rep.id.value
      br      
      div
        .w3-cell-row
          <div class="w3-container w3-padding w3-cell w3-card" style="width:50%">
            h3.w3-center
                <b>Query</b>
            hr
            .w3-container
              textarea.w3-input.w3-border(rows='10' type='text' name='query' id='query')
            .w3-padding.w3-margin-bottom
              button.w3-button.w3-blue-grey(id='submit') Submit
            </div>
          <div class="w3-container w3-padding w3-cell w3-card" style="width:50%">
            h3.w3-center
                <b>Resultado</b>
            hr
            .w3-container
              textarea.w3-input.w3-border(rows='10' type='text' name='result' id='result')
          </div>